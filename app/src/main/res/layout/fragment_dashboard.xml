<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="259dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background = "#8999e9">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView"
                android:layout_width="188dp"
                android:layout_height="197dp"
                android:layout_marginBottom="52dp"
                android:src="@drawable/doggo"
                app:civ_border_color="#7070db"
                app:civ_border_width="10dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/firstName"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="#8585e0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Pasindu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="#9c85e0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Siriwardena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <EditText

        android:id="@+id/editText5"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="#b385e0"
        android:ems="10"
        android:inputType="phone"
        android:text="  XXX-XXX-XXXX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="#c985e0"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="  pottyTime@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/firstName"
        app:layout_constraintEnd_toEndOf="@+id/firstName"
        app:layout_constraintTop_toTopOf="@+id/firstName" />


</androidx.constraintlayout.widget.ConstraintLayout>